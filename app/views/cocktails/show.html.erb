<div class="container">
  <div class="row">
    <div class="col-lg-12 text-center">
      <h1><%= @cocktail.name %></h1>
      <% @cocktail.doses.each do |c| %>
      <div class="dose-description">
        <div class="container">
      <%= c.description %> made with <%= c.ingredient.name %>
      </div>
      </div>
    <% end %>

<%= render "doses/form", cocktail: @cocktail, dose: @dose %>
<div class="container">
<%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
</div>
<%= link_to "View all Cocktails", cocktails_path, class: "btn btn-primary mt-3" %>
    </div>
  </div>
</div>
