<div class="home-banner">
  <div class="banner-title">
    <h1>Cocktail O'Clock</h1>
  </div>
  <div class="banner-text">
    <h3>Feeling creative?</h3>
    <p><%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %></p>
  </div>
</div>

<div class="card-title">
  <h3>Feeling thirsty? Try our recipes</h3>
</div>

<div class="cards">
  <% @cocktails.each do |cocktail| %>
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://res.cloudinary.com/dncystzjv/image/upload/v1587382966/nikolay-dimitrov-hiGlNxHIt9U-unsplash_i0ejwq.jpg)">
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
  <% end %>
</div>


